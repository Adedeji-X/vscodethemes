{
  "name": "vscodethemes",
  "version": "0.1.0",
  "main": "index.js",
  "author": "Jordan Schroter <hello@jschr.io>",
  "license": "MIT",
  "scripts": {
    "invoke:fetchThemes":
      "ts-node scripts/invoke --job ../backend/jobs/fetchThemes.ts",
    "build": "rimraf build && tsc",
    "package":
      "yarn build && bestzip build/lambda.zip build/backend build/types",
    "terraform-plan":
      "yarn package && cd infrastructure/env-production && terraform get && terraform plan",
    "terraform-show":
      "yarn package && cd infrastructure/env-production && terraform get && terraform show",
    "deploy":
      "yarn package && cd infrastructure/env-production && terraform get && terraform apply -auto-approve",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "tslint --project ."
  },
  "dependencies": {
    "node-fetch": "^1.7.3",
    "runtypes": "^0.13.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^0.0.24",
    "@types/jest": "^21.1.8",
    "@types/minimist": "^1.2.0",
    "@types/node": "^8.0.54",
    "@types/node-fetch": "^1.6.7",
    "aws-sdk": "^2.162.0",
    "bestzip": "^1.1.4",
    "jest": "^21.2.1",
    "jest-fetch-mock": "^1.3.3",
    "minimist": "^1.2.0",
    "prettier": "^1.8.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^21.2.4",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-react": "^3.2.0",
    "typescript": "^2.6.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 80
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "mapCoverage": true,
    "collectCoverageFrom": ["backend/**", "frontend/**"],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"]
  }
}
